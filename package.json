{
  "name": "mcp-google-flights",
  "version": "1.0.0",
  "description": "MCP Server for Google Flights search using SerpAPI",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-google-flights": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "google-flights",
    "serpapi",
    "travel",
    "flights",
    "n8n"
  ],
  "author": "Felipe Santos",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "node-cache": "^5.1.2",
    "opossum": "^8.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/opossum": "^8.1.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "prettier": "^3.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jfcardososantos/mcp-google-flights"
  },
  "bugs": {
    "url": "https://github.com/jfcardososantos/mcp-google-flights/issues"
  },
  "homepage": "https://github.com/jfcardososantos/mcp-google-flights#readme",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}